<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3e3e3e"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@mipmap/pc"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<LinearLayout
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <mommoo.com.library.widget.CircleImageView
        app:circle_background="@color/colorPrimaryDark"
        android:src="@mipmap/suit"
        android:padding="30dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:gravity="center"
        android:text="Suit YourSelf"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/wifiColorPrimaryDark"

        android:layout_width="match_parent"
        android:layout_height="70dp">
        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleColor="@color/wifiColorRipple"
            android:id="@+id/wifiBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:paddingLeft="48dp"
                android:paddingRight="16dp"
                android:src="@mipmap/wifi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:text="WIFI"
                android:textColor="#fff"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/bluetoothColorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <com.balysv.materialripple.MaterialRippleLayout
            app:mrl_rippleColor="@color/bluetoothColorRipple"
            android:id="@+id/bluetoothBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:paddingLeft="48dp"
                    android:paddingRight="16dp"
                    android:src="@mipmap/bluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="BLUETOOTH"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</FrameLayout>